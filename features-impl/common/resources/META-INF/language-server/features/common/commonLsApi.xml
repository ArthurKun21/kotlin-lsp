<idea-plugin>
  <id>language-server/common/api/</id>
  <vendor>JetBrains</vendor>

  <extensionPoints>
    <extensionPoint qualifiedName="ls.markdownDocProvider" beanClass="com.intellij.lang.LanguageExtensionPoint" dynamic="true">
      <with attribute="implementationClass" implements="com.jetbrains.ls.api.features.impl.common.hover.AbstractLSHoverProvider$LSMarkdownDocProvider"/>
    </extensionPoint>
    <extensionPoint qualifiedName="ls.completionItemKindProvider" beanClass="com.intellij.lang.LanguageExtensionPoint" dynamic="true">
      <with attribute="implementationClass" implements="com.jetbrains.ls.api.features.completion.LSCompletionItemKindProvider"/>
    </extensionPoint>
  </extensionPoints>

  <extensions defaultExtensionNs="ls">
    <markdownDocProvider language="JAVA"
                         implementationClass="com.jetbrains.ls.api.features.impl.javaBase.documentation.LSMarkdownDocProviderJavaImpl"/>

    <completionItemKindProvider language="JAVA"
                                implementationClass="com.jetbrains.ls.api.features.impl.javaBase.completion.LSCompletionItemKindProviderJavaImpl"/>
  </extensions>
</idea-plugin>